<div class="container project team-page">

    <squarespace:block-field id="the-team-intro" columns="12" lock-layout="true"/>


    <div class="grid">
    
        {.repeated section items}

            <div class="member col-xs-12 col-sm-4">
                <div class="photo-container">
                    <img class="twitter-logo slideOutDown" src="/assets/twitter-big.png">
                    <img class="photo" src="{assetUrl}">
                </div>
                <div class="content">
                    <h3>{title}</h3>
                    <span class="role">{customContent.role}</span>
                    <span class="twitter-handle">{customContent.twitterHandle}</span>
                </div>
            </div>

        {.end}

    </div>

    <div class="clearer"></div>

</div>